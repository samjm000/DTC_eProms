# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eproms_db
DB_USER=eproms_user
DB_PASSWORD=eproms_secure_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h

# NHS SSO Configuration (for clinician login)
NHS_SSO_CLIENT_ID=your_nhs_sso_client_id
NHS_SSO_CLIENT_SECRET=your_nhs_sso_client_secret
NHS_SSO_REDIRECT_URI=http://localhost:3001/auth/nhs/callback

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.nhs.uk
SMTP_PASSWORD=smtp_password
SMTP_FROM=NHS EPROMS <noreply@example.nhs.uk>

# SMS Configuration (optional)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
